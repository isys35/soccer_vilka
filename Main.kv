Container:
<Container>:
    orientation: 'vertical'
    Calculactor:
        id: calculator
    ScrollView:
        size_hint_y: .8
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            id: box
            size_hint_y: None
            orientation: 'vertical'
            height: self.minimum_height
            padding: 5
            spacing: 5

<Calculactor>:
    orientation: 'vertical'
    size_hint_y: .2
    BoxLayout:
        canvas.before:
            Color:
                rgba: .4,.4,.4,1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: '{}'.format(root.value_str)
            size_hint_x:.4
            canvas.before:
                Color:
                    rgba: .21,.21,.21,1
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            text: '2-ой тайм'
            size_hint_x:.3
        BoxLayout:
            orientation : 'vertical'
            Label:
                text: '{}'.format(root.champ_pari_str)
            Label:
                text: '{}'.format(root.champ_xbet_str)
        Label:
            text: '{}'.format(root.total_score)
    BoxLayout:
        size_hint_y: .4
        canvas.before:
            Color:
                rgba: .6,.6,.6,1
            Rectangle:
                size: self.size
                pos: self.pos
        Widget:
            size_hint_x: .3
        Widget:
        Label:
            text: '[b]Кэф.[/b]'
            font_size: '12sp'
            color: .4,.4,.4,1
            markup: True
            size_hint_x: .3
        Widget:
            size_hint_x: .3
        Label:
            text: '[b]Ставка[/b]'
            font_size: '12sp'
            color: .4,.4,.4,1
            markup: True
            size_hint_x: .3
        Widget:
            size_hint_x: .3
        Label:
            text: '[b]Доход[/b]'
            font_size: '12sp'
            color: .4,.4,.4,1
            markup: True
            size_hint_x: .3
    BoxLayout:
        size_hint_y: .6
        canvas.before:
            Color:
                rgba: .70,.82,.67,1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            size_hint_x: .3
            text: '[b]Париматч[/b]'
            color: .4,.4,.4,1
            markup: True
        Label:
            text: '{}'.format(root.commands_pari_str)
            color: 0,0,0,1
        Label:
            text: '{}'.format(root.kf_pari)
            size_hint_x: .3
            color: 0,0,0,1
        Label:
            text:'Тб({})'.format(root.points)
            size_hint_x: .3
            color: 0,0,0,1
        TextInput:
            id: bet1
            text: '0'
            size_hint_x: .3
            color: 0,0,0,1
            multiline: False
        Widget:
            size_hint_x: .3
        Label:
            id: profit1
            size_hint_x: .3
            color: 0,0,0,1
    BoxLayout:
        size_hint_y: .6
        canvas.before:
            Color:
                rgba: .87,.95,.85,1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            size_hint_x: .3
            text: '[b]1xставка[/b]'
            color: .4,.4,.4,1
            markup: True
        Label:
            text: '{}'.format(root.commands_xbet_str)
            color: 0,0,0,1
        Label:
            text: '{}'.format(root.kf_xbet)
            size_hint_x: .3
            color: 0,0,0,1
        Label:
            text:'Тм({})'.format(root.points)
            size_hint_x: .3
            color: 0,0,0,1
        Label:
            id: bet2
            text: '0'
            size_hint_x: .3
            color: 0,0,0,1
        CheckBox:
            id: check_box
            size_hint_x: .3
            color: 0,0,0,1
        Label:
            id: profit2
            text: ''
            size_hint_x: .3
            color: 0,0,0,1
    BoxLayout:
        canvas.before:
            Color:
                rgba: .6,.6,.6,1
            Rectangle:
                size: self.size
                pos: self.pos
        padding: 5
        size_hint_y: .6
        Widget:
            size_hint_x: .3
        Label:
            text: 'Округлять до:'
            color: 0,0,0,1
            halign: 'right'
            valign: 'center'
            text_size: self.size
        TextInput:
            id: rounder
            text: '2'
            multiline: False
            size_hint_x: .3
        Widget:
            size_hint_x: .3
        Label:
            id: sum_c
            size_hint_x: .3
            color: 0,0,0,1
        Widget:
            size_hint_x: .3
        Widget:
            size_hint_x: .3


